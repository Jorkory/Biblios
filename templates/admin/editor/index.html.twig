{% extends 'admin/dashboard.html.twig' %}

{% block title %}Liste des éditeurs{% endblock %}

{% block section %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<section class="w-100">
<div class="example-wrapper">
    <h1>Liste des éditeurs</h1>

    <ul>
        {% for editor in editors %}
            <div class="card m-1">
                <div class="card-body">
                    <div class="card-title d-flex justify-content-between">
                        <h2 class="m-1">{{ editor.name }}</h2>
                        <small>Identifiant : {{ editor.id }}</small>
                    </div>
                <div class="d-flex justify-content-end">
                    <a href="{{ path('app_admin_editor_edit', {id: editor.id}) }}" class="btn btn-light btn-sm">Modifier</a>
                </div>
                </div>
            </div>
            {% else %}
            <li>Aucune donnée n'a été enregistrée.</li>
        {% endfor %}
    </ul>
</div>
</section>
{% endblock %}
