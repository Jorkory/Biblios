{% extends 'base.html.twig' %}

{% block title %}Catalogue des livres{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <section class="py-5">
        <div class="container px-4 px-lg-5 mt-5">
            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-3 justify-content-center">
                <div class="col mb-5">
                    {% for book in books %}
                    <div class="card h-100">
                        <!-- Product image-->
                        <img class="card-img-top" src="{{ book.cover }}" alt="..." />
                        <!-- Product details-->
                        <div class="card-body p-4">
                            <div class="text-center">
                                <h5 class="fw-bolder">{{ book.title }}</h5>
                                {% for author in book.authors %}
                                    <p>{{ author.name }}</p>
                                    {% else %}
                                    <p>Auteur non connu</p>
                                {% endfor %}
                            </div>
                        </div>
                        <!-- Product actions-->
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="{{ path('app_public_book_show', {id : book.id}) }}">Voir</a></div>
                        </div>
                    </div>
                        {% else %}
                        <p>Il n'y a pas de livre.</p>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>
</div>
{% endblock %}
